<footer class="py-12 px-4 sm:px-6 lg:px-8" data-turbo-prefetch="false">
  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="space-y-4">
        <div class="text-lg font-semibold text-base-content">
          <%= Setting.store_name %>
        </div>
        <p class="text-base-content/60">
          Â© <%= Time.zone.now.year %>
        </p>
        <div class="pt-2">
          <%= render "shared/social_links" %>
        </div>
      </div>

      <!-- Contact Info -->
      <div class="space-y-4">
        <h3 class="text-sm font-semibold text-base-content uppercase tracking-wider">Contact</h3>
        <div class="space-y-2">
          <p class="text-base-content/60">
            <%= Setting.address %>
          </p>
          <p class="text-base-content/60">
            <%= Setting.phone_number %>
          </p>
          <%= mail_to Setting.email, class: "text-base-content/60 hover:text-base-content transition-colors" %>
        </div>
      </div>

      <!-- Legal -->
      <div class="space-y-4">
        <h3 class="text-sm font-semibold text-base-content uppercase tracking-wider">Legal</h3>
        <div class="space-y-2">
          <% if Setting.terms_of_service.present? %>
            <div>
              <%= active_link_to terms_of_service_path, class: "inline-block text-base-content/60 hover:text-base-content transition-colors" do %>
                <%= t("static.terms_of_service.title") %>
              <% end %>
            </div>
          <% end %>

          <% if Setting.privacy_policy.present? %>
            <div>
              <%= active_link_to privacy_policy_path, class: "inline-block text-base-content/60 hover:text-base-content transition-colors" do %>
                <%= t("static.privacy_policy.title") %>
              <% end %>
            </div>
          <% end %>

          <% if Setting.refund_policy.present? %>
            <div>
              <%= active_link_to refund_policy_path, class: "inline-block text-base-content/60 hover:text-base-content transition-colors" do %>
                <%= t("static.refund_policy.title") %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Admin Links -->
      <div class="space-y-4">
        <h3 class="text-sm font-semibold text-base-content uppercase tracking-wider">Admin</h3>
        <div class="space-y-2">
          <div>
            <%= active_link_to admin_orders_path, class: "inline-block text-base-content/60 hover:text-base-content transition-colors" do %>
              <i class="fa fa-lock"></i>
              <%= t("admin.orders.index.title") %>
            <% end %>
          </div>

          <div>
            <%= active_link_to admin_stats_path, class: "inline-block text-base-content/60 hover:text-base-content transition-colors" do %>
              <i class="fa fa-lock"></i>
              <%= t("admin.stats.index.title") %>
            <% end %>
          </div>

          <div>
            <%= active_link_to [:admin, :settings], class: "inline-block text-base-content/60 hover:text-base-content transition-colors" do %>
              <i class="fa fa-lock"></i>
              <%= t("admin.settings.index.title") %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Language Selector -->
    <div class="mt-8 pt-8 border-t border-base-300">
      <div class="flex justify-center">
        <%= form_tag request.path, method: :get, class: "inline-block" do %>
          <%= select_tag :locale,
            options_for_select(I18n.available_locales.map { |l| [flag(l), l] }, I18n.locale),
            onchange: "this.form.requestSubmit()",
            class: "du-select du-select-bordered" %>
        <% end %>
      </div>
    </div>
  </div>
</footer>
