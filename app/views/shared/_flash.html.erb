<% if flash.any? %>
  <div class="toast toast-end z-50 fixed top-4 right-4">
    <% flash.each do |type, message| %>
      <% next if message.blank? %>
      <div class="du-alert du-alert-sm <%= alert_class_for(type) %> shadow-lg animate-fade-in-right max-w-sm" data-controller="flash" data-flash-target="message">
        <div class="flex items-center gap-2">
          <%= alert_icon_for(type) %>
          <span class="text-sm"><%= message %></span>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
