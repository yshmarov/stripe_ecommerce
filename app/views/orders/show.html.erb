<%= meta_tags(title: t(".title", slug: @order.slug.upcase)) %>

<%= turbo_stream_from @order %>

<% if !@order.draft? && !@order.done? %>
  <h3>
    <%= t(".thank_you") %>
  </h3>
<% end %>

<%= render @order %>

<% if @order.order_items.any? %>
  <details open>
    <summary>
      <%= t("orders.order.items").capitalize %>
    </summary>
    <%= render @order_items %>
  </details>
<% end %>
