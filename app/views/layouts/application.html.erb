<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? "#{content_for(:title)} | #{Setting.store_name}" : Setting.store_name %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <% if @stripe_logo_url.present? %>
      <%= favicon_link_tag @stripe_logo_url %>
    <% end %>

    <% if @stripe_account&.settings&.branding&.primary_color.present? %>
      <style>
        :root {
          --primary: <%= @stripe_account.settings.branding.primary_color %>;
          --primary-focus: <%= @stripe_account.settings.branding.secondary_color %>;
        }
      </style>
    <% end %>

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
      integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    >


    <script defer data-domain="warszawabooks.pl" src="https://plausible.io/js/script.js"></script>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= turbo_refreshes_with method: :morph, scroll: :preserve %>
    <%= yield :head %>
  </head>

  <body class="min-h-screen flex flex-col">
    <div class="drawer min-h-screen flex flex-col">
      <input id="drawer" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content flex flex-col min-h-screen">
        <header class="sticky top-0 z-50 bg-base-100 shadow-md">
          <%= render "shared/nav" %>
        </header>
        <main class="flex-grow container mx-auto px-4 py-8 min-h-[calc(100vh-8rem)]">
          <%#= render "shared/flash" %>
          <%= yield %>
        </main>
        <footer class="bg-base-200 mt-auto">
          <%= render "shared/footer" %>
        </footer>
      </div>
    </div>
  </body>
</html>
