<div id="<%= dom_id order_item %>" class="card card-side bg-base-100 shadow-sm mb-4">
  <figure class="w-24 h-25">
    <%= image_tag order_item.price.product.image_url, class: "w-full h-full object-cover" if order_item.price.product.image_url.present? %>
  </figure>

  <div class="card-body p-4">
    <div class="flex justify-between items-start">
      <div>
        <h3 class="card-title text-lg">
          <%= order_item.price.product.name %>
        </h3>

        <div class="flex items-center gap-2 text-sm">
          <% if @order.draft? %>
            <%= render "order_items/form", order_item: %>
          <% else %>
            <span class="font-semibold"><%= order_item.quantity %></span>
          <% end %>
          <span>Ã—</span>
          <span class="text-primary font-semibold"><%= price_label(order_item.price) %></span>
          <span>=</span>
          <span class="font-bold">
            <%= number_to_currency(order_item.total_amount / 100.0, unit: currency_code_to_symbol(order_item.price.product.default_currency)) %>
          </span>
        </div>
      </div>

      <% if @order.draft? %>
        <%= button_to [order_item.order, order_item], 
            method: :delete, 
            class: "btn btn-ghost btn-sm text-error" do %>
          <i class="fa-solid fa-trash"></i>
          <%= t(".remove") %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
