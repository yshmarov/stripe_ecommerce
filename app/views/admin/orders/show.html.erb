<%= turbo_stream_from @order %>

<div class="container mx-auto px-4 py-8">
  <%= render @order %>

  <% if @order&.order_items&.any? %>
    <details open class="bg-base-100 shadow-sm mt-4 rounded-lg">
      <summary class="p-4 text-lg font-medium cursor-pointer hover:bg-base-200">
        <%= t("orders.order.items").capitalize %>
      </summary>
      <div class="p-4 border-t">
        <div class="grid gap-4">
          <%= render collection: @order.order_items, partial: "order_items/order_item", as: :order_item %>
        </div>
      </div>
    </details>
  <% end %>
</div>
